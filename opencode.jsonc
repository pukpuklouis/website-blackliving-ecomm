{
  "$schema": "https://opencode.ai/config.json",
  "instructions": ["_bmad/core/config.yaml"],
  "agent": {
    "bmad-ux-expert": {
      "prompt": "{file:./_bmad/bmm/agents/ux-designer.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for UI/UX design, wireframes, prototypes, front-end specifications, and user experience optimization"
    },
    "bmad-sm": {
      "prompt": "{file:./_bmad/bmm/agents/sm.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for story creation, epic management, retrospectives in party-mode, and agile process guidance"
    },
    "bmad-tea": {
      "prompt": "{file:./_bmad/bmm/agents/tea.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for comprehensive test architecture review, quality gate decisions, and code improvement. Provides thorough analysis including requirements traceability, risk assessment, and test strategy."
    },
    "bmad-pm": {
      "prompt": "{file:./_bmad/bmm/agents/pm.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for creating PRDs, product strategy, feature prioritization, roadmap planning, and stakeholder communication"
    },
    "bmad-dev": {
      "prompt": "{file:./_bmad/bmm/agents/dev.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for code implementation, debugging, refactoring, and development best practices"
    },
    "bmad-master": {
      "prompt": "{file:./_bmad/core/agents/bmad-master.md}",
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use when you need comprehensive expertise across all domains, running 1 off tasks that do not require a persona, or just wanting to use the same agent for many things."
    },
    "bmad-architect": {
      "prompt": "{file:./_bmad/bmm/agents/architect.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for system design, architecture documents, technology selection, API design, and infrastructure planning"
    },
    "bmad-analyst": {
      "prompt": "{file:./_bmad/bmm/agents/analyst.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for market research, brainstorming, competitive analysis, creating project briefs, initial project discovery, and documenting existing projects (brownfield)"
    },
    "bmad-tech-writer": {
      "prompt": "{file:./_bmad/bmm/agents/tech-writer.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for technical documentation, API docs, user guides, and documentation standards"
    },
    "bmad-quick-flow": {
      "prompt": "{file:./_bmad/bmm/agents/quick-flow-solo-dev.md}",
      "mode": "all",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true
      },
      "description": "Use for quick solo development tasks and rapid prototyping"
    }
  },
  "command": {
    "bmad:tasks:index-docs": {
      "template": "{file:./_bmad/core/tasks/index-docs.xml}",
      "description": "This task maintains the integrity and completeness of the docs/index.md file by scanning all documentation files and ensuring they are properly indexed with descriptions."
    },
    "bmad:tasks:review-adversarial": {
      "template": "{file:./_bmad/core/tasks/review-adversarial-general.xml}",
      "description": "Perform an adversarial review to find issues and gaps in documentation or code."
    },
    "bmad:tasks:shard-doc": {
      "template": "{file:./_bmad/core/tasks/shard-doc.xml}",
      "description": "Split a large document into multiple smaller documents based on level 2 sections. Create a folder structure to organize the sharded documents."
    },
    "bmad:tasks:validate-workflow": {
      "template": "{file:./_bmad/core/tasks/validate-workflow.xml}",
      "description": "Validate workflow files for correctness and compliance."
    },
    "bmad:tasks:workflow": {
      "template": "{file:./_bmad/core/tasks/workflow.xml}",
      "description": "Execute or manage BMAD workflows."
    }
  }
}

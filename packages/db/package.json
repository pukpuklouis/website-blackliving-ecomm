{
  "name": "@blackliving/db",
  "version": "1.0.0",
  "description": "Database client and schema for Black Living",
  "main": "client.ts",
  "type": "module",
  "exports": {
    ".": "./client.ts",
    "./schema": "./schema.ts",
    "./customer-profile-service": "./customer-profile-service.ts"
  },
  "scripts": {
    "db:generate": "drizzle-kit generate && node validate-migrations.js",
    "db:validate": "node validate-migrations.js",
    "db:studio": "drizzle-kit studio",
    "db:studio:local": "drizzle-kit studio --config=drizzle.config.local.ts --port=4984",
    "db:studio:remote": "drizzle-kit studio --config=drizzle.config.ts --port=4983",
    "db:introspect": "drizzle-kit introspect",
    "db:push": "drizzle-kit push",
    "db:sync": "node db-sync.js",
    "db:migrate:local": "node db-sync.js migrate-local",
    "db:migrate:remote": "node db-sync.js migrate-remote",
    "db:seed:local": "node db-sync.js seed-local",
    "db:seed:remote": "node db-sync.js seed-remote",
    "db:init:remote": "node db-sync.js init-remote",
    "db:sync:from-remote": "node db-sync.js sync-from-remote",
    "db:sync:to-remote": "node db-sync.js sync-to-remote",
    "db:reset:local": "node db-sync.js reset-local",
    "db:status": "node db-sync.js status",
    "db:migrate:prod": "node db-sync.js migrate-remote",
    "db:seed:prod": "node db-sync.js seed-remote",
    "db:seed": "node db-sync.js seed-local",
    "db:sync-data": "node sync-data.js"
  },
  "dependencies": {
    "@libsql/client": "^0.15.15",
    "@paralleldrive/cuid2": "^2.2.2",
    "drizzle-orm": "^0.44.7"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "drizzle-kit": "^0.31.4",
    "drizzle-seed": "^0.3.1",
    "tsx": "^4.7.0",
    "typescript": "^5.8.3"
  }
}

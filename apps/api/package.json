{
  "name": "api",
  "version": "1.0.0",
  "description": "Black Living API - Cloudflare Workers with Hono",
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev --env development --local  --persist-to .wrangler/state --port 8787",
    "dev:staging": "wrangler dev --env staging --local",
    "dev:remote": "wrangler dev",
    "build": "wrangler deploy --dry-run --env production",
    "build:local": "wrangler deploy --dry-run --env development",
    "build:staging": "wrangler deploy --dry-run --env staging",
    "deploy": "wrangler deploy --name blackliving-api --env production",
    "deploy:staging": "wrangler deploy --name blackliving-api-staging --env staging",
    "secret:put": "wrangler secret put BETTER_AUTH_SECRET GOOGLE_CLIENT_ID GOOGLE_CLIENT_SECRET JWT_SECRET --name blackliving-api",
    "secret:put:staging": "wrangler secret put BETTER_AUTH_SECRET --name blackliving-api-staging",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run tests/**/*.test.ts --exclude=**/*.integration.test.ts --exclude=**/*.e2e.test.ts",
    "test:integration": "vitest run --config vitest.integration.config.ts src/**/*.integration.test.ts tests/**/*.integration.test.ts",
    "test:coverage": "vitest run --coverage",
    "test:runner": "tsx tests/test-runner.ts",
    "test:db": "vitest run tests/db-utils.test.ts",
    "test:seed": "vitest run tests/seed-data.test.ts",
    "test:verbose": "VERBOSE=true vitest run",
    "test:profile": "vitest run src/routes/__tests__/customer-profile.test.ts"
  },
  "dependencies": {
    "@blackliving/auth": "workspace:*",
    "@blackliving/db": "workspace:*",
    "@blackliving/types": "workspace:*",
    "@hono/zod-validator": "^0.2.2",
    "drizzle-orm": "^0.44.7",
    "hono": "^4.10.4",
    "hono-rate-limiter": "^0.4.2",
    "jose": "^5.10.0",
    "zod": "^3.25.76",
    "meilisearch": "^0.54.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.71",
    "@cloudflare/workers-types": "^4.20251210.0",
    "@paralleldrive/cuid2": "^2.3.1",
    "@types/node": "^20.19.24",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/ui": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.38.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4",
    "wrangler": "latest"
  }
}

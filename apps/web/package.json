{
  "name": "web",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev --host --port 4321",
    "start": "astro dev --host --port 4321",
    "build": "NODE_OPTIONS='--loader=./loader.mjs' astro build",
    "build:staging": "NODE_OPTIONS='--loader=./loader.mjs' astro build --mode staging",
    "build:check": "astro check && astro build",
    "preview": "wrangler pages dev dist --compatibility-date=2024-09-23 --port=4321",
    "preview:astro": "astro preview",
    "astro": "astro",
    "type-check": "astro check",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx}\"",
    "format:astro": "node ../../scripts/fix-astro-classnames.js",
    "lint:astro": "astro check",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "wrangler pages deploy dist --project-name blackliving-web --commit-dirty=true --branch production",
    "deploy:staging": "wrangler pages deploy dist --project-name blackliving-web --commit-dirty=true --branch staging"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/cloudflare": "^12.6.0",
    "@astrojs/db": "^0.15.1",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.4.2",
    "@blackliving/auth": "workspace:*",
    "@blackliving/types": "workspace:*",
    "@blackliving/ui": "workspace:*",
    "@cloudflare/workers-types": "4.20250816.0",
    "@tailwindcss/vite": "^4.1.11",
    "astro": "^5.12.4",
    "astro-font": "^1.1.0",
    "embla-carousel-autoplay": "^8.6.0",
    "lucide-astro": "^0.546.0",
    "lucide-react": "^0.528.0",
    "marked": "^16.2.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-slug": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "tailwindcss": "^4.1.11",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.8.3",
    "unified": "^11.0.5",
    "zod": "^4.0.10",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@blackliving/tailwind-config": "workspace:*",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "vitest": "^3.2.4",
    "wrangler": "latest"
  }
}

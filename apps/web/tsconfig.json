{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": [
    "dist",
    // "**/node_modules",
    // "**/build",
    "**/.git",
    "**/.agent",
    "**/.claude",
    "**/.clinerules",
    "**/.cursor",
    "**/.gemini",
    "**/.github",
    "**/.husky",
    "**/.kilocode",
    "**/.roo",
    "**/.serena",
    "**/.spec-workflow",
    "**/.specify",
    "**/.windsurf",
    "**/.zed"
  ],
  "compilerOptions": {
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@blackliving/*": ["../../packages/*"]
    }
  }
}

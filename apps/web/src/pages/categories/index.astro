---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';
import CTA from '../../components/CTA.astro';

const categoriesEntries = await getCollection('categories');
const categories = categoriesEntries.map(entry => entry.data);

// SEO
const seoData = {
  title: '產品分類總覽 | 黑哥家居',
  description: '瀏覽黑哥家居全系列產品分類，包含席夢思黑標床墊、精選周邊配件、美國進口床墊等優質睡眠產品。',
  keywords: '產品分類,床墊,席夢思,睡眠用品,黑哥家居',
};
---

<BaseLayout 
  title={seoData.title}
  description={seoData.description}
>
  <main class="min-h-screen bg-gray-50">
    <!-- Hero Section -->
    <section class="bg-white border-b border-gray-200">
      <div class="container mx-auto px-4 lg:px-6 py-12 lg:py-16">
        <div class="text-center max-w-3xl mx-auto">
          <h1 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
            產品分類總覽
          </h1>
          <p class="text-lg text-gray-600 leading-relaxed">
            探索黑哥家居精選的睡眠產品系列，從頂級床墊到貼心配件，為您打造完美睡眠體驗
          </p>
        </div>
      </div>
    </section>

    <!-- Categories Grid -->
    <section class="py-12 lg:py-16">
      <div class="container mx-auto px-4 lg:px-6">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {categories.map((category) => (
            <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
              <div class="p-6 lg:p-8">
                <h2 class="text-xl lg:text-2xl font-bold text-gray-900 mb-3">
                  {category.series}
                </h2>
                <p class="text-gray-600 mb-4 leading-relaxed">
                  {category.description}
                </p>
                
                <!-- Features -->
                <div class="mb-6">
                  <h3 class="text-sm font-semibold text-gray-700 mb-2">特色優勢</h3>
                  <ul class="space-y-1">
                    {category.features.map((feature) => (
                      <li class="text-sm text-gray-600 flex items-center">
                        <svg class="w-4 h-4 text-[#C69C6D] mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                        </svg>
                        {feature}
                      </li>
                    ))}
                  </ul>
                </div>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-3">
                  <a
                    href={`/categories/${category.category}`}
                    class="flex-1 bg-[#C69C6D] text-white text-center py-2 px-4 rounded-md hover:bg-[#B8926B] transition-colors duration-200 font-medium"
                  >
                    瀏覽系列
                  </a>
                  <a
                    href={category.urlPath}
                    class="flex-1 border border-[#C69C6D] text-[#C69C6D] text-center py-2 px-4 rounded-md hover:bg-[#C69C6D] hover:text-white transition-colors duration-200 font-medium"
                  >
                    直接前往
                  </a>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Call to Action -->
    <section class="bg-[#C69C6D] text-white py-12 lg:py-16">
      <div class="container mx-auto px-4 lg:px-6 text-center">
        <h2 class="text-2xl lg:text-3xl font-bold mb-4">
          需要專業建議？
        </h2>
        <p class="text-lg mb-8 max-w-2xl mx-auto">
          我們的睡眠專家團隊隨時為您提供個人化的產品推薦與諮詢服務
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/appointment"
            class="bg-white text-[#C69C6D] py-3 px-6 rounded-md hover:bg-gray-100 transition-colors duration-200 font-medium"
          >
            預約試躺
          </a>
          <a
            href="/about"
            class="border border-white text-white py-3 px-6 rounded-md hover:bg-white hover:text-[#C69C6D] transition-colors duration-200 font-medium"
          >
            了解更多
          </a>
        </div>
      </div>
    </section>
    <CTA />
  </main>
</BaseLayout>
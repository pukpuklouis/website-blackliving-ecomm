---
import CheckoutForm from "../components/CheckoutForm";
import BaseLayout from "../layouts/BaseLayout.astro";

const title = "結帳 | Black Living";
const description = "輸入您的付款資料以完成交易";
---

<BaseLayout {title} {description}>
  <div
    class="bg-primary-foreground min-h-screen pt-10 pb-20 px-4 sm:px-6 lg:px-8 transition-colors duration-300"
  >
    <div class="w-full max-w-7xl text-center mx-auto mb-8">
      <h1
        class="text-3xl font-bold tracking-tight text-gray-900 dark:text-white"
      >
        完成您的購買
      </h1>
      <p class="mt-2 text-lg text-muted-foreground">
        輸入您的付款資料以完成交易
      </p>
    </div>

    <CheckoutForm
      client:only="react"
      onSuccess={() => {
      // Success is handled within the form logic to show the success card
    }}
    />
  </div>
</BaseLayout>

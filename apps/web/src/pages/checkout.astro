---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <main class="container mx-auto px-4 py-8">
    <div class="text-center mb-12">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">結帳</h1>
      <p class="text-xl text-gray-600">完成您的訂單</p>
    </div>

    <div class="max-w-4xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <h2 class="text-2xl font-semibold mb-6">訂單資訊</h2>
          <!-- Order summary will be implemented -->
        </div>

        <div>
          <h2 class="text-2xl font-semibold mb-6">配送資訊</h2>
          <!-- Shipping form will be implemented -->
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
---

<BaseLayout>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-md mx-auto">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-4">會員登入</h1>
        <p class="text-gray-600">登入您的 Black Living 會員帳號</p>
      </div>
      
      <div class="bg-white p-8 rounded-lg shadow-md">
        <!-- Better Auth UI will be integrated here -->
        <div id="better-auth-signin"></div>
      </div>
      
      <div class="text-center mt-6">
        <p class="text-sm text-gray-600">
          還不是會員？
          <a href="/account/register" class="text-black font-medium hover:underline">
            立即註冊
          </a>
        </p>
      </div>
    </div>
  </main>
</BaseLayout>
---
/**
 * New Profile Page - Clean React-based Implementation
 * Replaces the massive vanilla JS version with production-ready React components
 */
import Layout from '../../layouts/Layout.astro';
import ProfileTabs from '../../components/ProfileTabs.tsx';
---

<Layout 
  title="個人資料 | Black Living 黑哥家居" 
  description="管理您的個人資料、收貨地址和帳戶設定。安全可靠的個人資訊管理。"
>
  <main class="min-h-screen bg-gray-50">
    <!-- Header Section -->
    <section class="bg-white border-b">
      <div class="container mx-auto px-4 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-2xl font-bold text-gray-900">個人資料</h1>
            <p class="text-gray-600 mt-1">管理您的個人資訊和帳戶設定</p>
          </div>
          <div id="sync-indicator" class="hidden">
            <div class="flex items-center text-sm text-gray-600">
              <div class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></div>
              資料同步中...
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="container mx-auto px-4 py-8">
      <div id="profile-container" class="space-y-8">
        <!-- Loading State -->
        <div id="profile-loading" class="text-center py-12">
          <div class="inline-flex items-center">
            <svg class="animate-spin h-6 w-6 text-blue-600 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            載入個人資料...
          </div>
        </div>

        <!-- Error State -->
        <div id="profile-error" class="hidden">
          <div class="bg-red-50 border border-red-200 rounded-lg p-6 text-center">
            <svg class="mx-auto h-12 w-12 text-red-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.728-.833-2.498 0L4.316 15.5c-.77.833.192 2.5 1.732 2.5z" />
            </svg>
            <h3 class="text-lg font-medium text-red-900 mb-2">載入失敗</h3>
            <p class="text-red-700 mb-4">無法載入個人資料，請稍後再試</p>
            <button id="retry-button" class="bg-red-600 text-white px-4 py-2 rounded hover:bg-red-700 transition-colors">
              重試
            </button>
          </div>
        </div>

        <!-- Not Authenticated State -->
        <div id="profile-not-authenticated" class="hidden">
          <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 text-center">
            <svg class="mx-auto h-12 w-12 text-yellow-600 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 0h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
            </svg>
            <h3 class="text-lg font-medium text-yellow-900 mb-2">需要登入</h3>
            <p class="text-yellow-700 mb-4">請先登入以管理您的個人資料</p>
            <a href="/auth/login" class="bg-yellow-600 text-white px-4 py-2 rounded hover:bg-yellow-700 transition-colors">
              前往登入
            </a>
          </div>
        </div>

        <!-- Success/Error Messages -->
        <div id="message-container" class="hidden">
          <div id="success-message" class="hidden bg-green-50 border border-green-200 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-green-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-green-800 text-sm" id="success-text"></p>
            </div>
          </div>
          
          <div id="error-message" class="hidden bg-red-50 border border-red-200 rounded-lg p-4">
            <div class="flex">
              <svg class="w-5 h-5 text-red-600 mt-0.5 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
              <p class="text-red-800 text-sm" id="error-text"></p>
            </div>
          </div>
        </div>

        <!-- Profile Content (React Components) -->
        <div id="profile-content" class="hidden">
          <ProfileTabs client:load />
        </div>
      </div>
    </section>
  </main>
</Layout>

<script>
  import { checkAuth } from '../../lib/auth-client';

  // Simple client-side authentication check and UI management
  document.addEventListener('DOMContentLoaded', async () => {
    const profileContainer = document.getElementById('profile-container');
    const loadingEl = document.getElementById('profile-loading');
    const errorEl = document.getElementById('profile-error');
    const notAuthEl = document.getElementById('profile-not-authenticated');
    const contentEl = document.getElementById('profile-content');
    const retryButton = document.getElementById('retry-button');

    async function initialize() {
      try {
        // Show loading state
        loadingEl?.classList.remove('hidden');
        errorEl?.classList.add('hidden');
        notAuthEl?.classList.add('hidden');
        contentEl?.classList.add('hidden');

        // Check authentication
        const isAuthenticated = await checkAuth();
        
        if (!isAuthenticated) {
          loadingEl?.classList.add('hidden');
          notAuthEl?.classList.remove('hidden');
          return;
        }

        // User is authenticated, show React components
        loadingEl?.classList.add('hidden');
        contentEl?.classList.remove('hidden');

      } catch (error) {
        console.error('Profile initialization error:', error);
        loadingEl?.classList.add('hidden');
        errorEl?.classList.remove('hidden');
      }
    }

    // Retry handler
    retryButton?.addEventListener('click', initialize);

    // Initialize
    await initialize();
  });

  // Message handling for React components
  function showMessage(type: 'success' | 'error', text: string) {
    const messageContainer = document.getElementById('message-container');
    const successEl = document.getElementById('success-message');
    const errorEl = document.getElementById('error-message');
    const successText = document.getElementById('success-text');
    const errorText = document.getElementById('error-text');

    if (!messageContainer) return;

    messageContainer.classList.remove('hidden');

    if (type === 'success') {
      successEl?.classList.remove('hidden');
      errorEl?.classList.add('hidden');
      if (successText) successText.textContent = text;
    } else {
      errorEl?.classList.remove('hidden');
      successEl?.classList.add('hidden');
      if (errorText) errorText.textContent = text;
    }

    // Auto-hide after 5 seconds
    setTimeout(() => {
      messageContainer.classList.add('hidden');
    }, 5000);
  }

  // Expose message function globally for React components
  (window as any).showProfileMessage = showMessage;
</script>
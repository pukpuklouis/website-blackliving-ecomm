---
import BaseLayout from '../../layouts/BaseLayout.astro';
import AccountNav from '../../components/AccountNav.astro';
// This page will be protected by Better Auth middleware
---

<BaseLayout>
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">預約記錄</h1>
        <p class="text-gray-600">管理您的門市預約</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <AccountNav currentPage="appointments" />
        
        <div class="md:col-span-2 min-w-0">
          <div class="min-w-[600px] min-h-[400px]">
          <div class="space-y-6">
            <!-- Appointment items will be dynamically rendered -->
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="flex justify-between items-start mb-4">
                <div>
                  <h3 class="font-semibold text-lg">中和門市試躺</h3>
                  <p class="text-sm text-gray-500">預約時間：2024-01-20 14:00</p>
                </div>
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">已確認</span>
              </div>
              
              <div class="border-t pt-4">
                <p class="text-gray-700">聯絡電話：02-1234-5678</p>
                <p class="text-sm text-gray-500 mt-1">地址：新北市中和區中正路123號</p>
              </div>
              
              <div class="mt-4 flex space-x-3">
                <button class="text-sm bg-gray-100 hover:bg-gray-200 px-4 py-2 rounded-lg">重新預約</button>
                <button class="text-sm text-red-600 hover:text-red-800">取消預約</button>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>
---
import AccountNav from "../../components/AccountNav.astro";
import MyAppointments from "../../components/profile/MyAppointments";
import BaseLayout from "../../layouts/BaseLayout.astro";
// This page will be protected by Better Auth middleware
---

<BaseLayout title="預約記錄" description="管理您的門市預約">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">預約記錄</h1>
        <p class="text-gray-600">管理您的門市預約</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <AccountNav currentPage="appointments"/>

        <div class="md:col-span-2 min-w-0">
          <div class="min-w-[600px] min-h-[400px]">
            <MyAppointments client:idle/>
          </div>
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

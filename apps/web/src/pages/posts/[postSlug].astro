---
import PostLayout from '../../layouts/PostLayout.astro';

export async function getStaticPaths() {
  // This will be implemented to fetch posts from the content collection
  return [
    { params: { postSlug: 'better-sleep-tips' } },
    { params: { postSlug: 'mattress-care-guide' } },
    { params: { postSlug: 'simmons-technology' } },
  ];
}

const { postSlug } = Astro.params;

// Mock post data - will be fetched from content collection
const post = {
  title: '優質睡眠的秘訣',
  description: '分享如何獲得更好睡眠品質的實用建議',
  image: '/images/sleep-tips.jpg',
  publishDate: new Date('2024-01-15'),
  author: 'Black Living 專業團隊'
};
---

<PostLayout {...post}>
  <header class="mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">{post.title}</h1>
    <div class="flex items-center text-sm text-gray-500 space-x-4">
      <span>發布日期: {post.publishDate.toLocaleDateString('zh-TW')}</span>
      <span>作者: {post.author}</span>
    </div>
  </header>
  
  <div class="prose prose-lg max-w-none">
    <p>文章內容將從內容集合中動態載入...</p>
  </div>
</PostLayout>
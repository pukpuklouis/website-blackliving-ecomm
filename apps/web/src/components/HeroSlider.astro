---
// Hero slider component for homepage, now using shadcn/ui Carousel
import { getCollection } from 'astro:content';
import HeroCarousel from './HeroCarousel.tsx';

// Assuming a single data file (e.g., slides.json) for the hero slider collection
const heroSliderCollection = await getCollection('hero-slider');
const heroData = heroSliderCollection[0]?.data;
---

<section class="relative h-screen overflow-hidden">
  {heroData && <HeroCarousel slideset={heroData.slideset} client:load />}
</section>

<style>
  @keyframes fade-in-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-down {
    animation: fade-in-down 0.8s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out 0.2s forwards;
  }
</style>

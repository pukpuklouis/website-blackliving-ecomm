---
// Hero slider component for homepage, now using shadcn/ui Carousel
import { getCollection } from 'astro:content';
import HeroCarousel from './HeroCarousel.tsx';

const slides = (await getCollection('hero-slider'))[0]?.data.slideset.slides?.map(s => ({
  data: s,
}));
---

<section class='relative h-screen overflow-hidden'>
  {slides?.length && <HeroCarousel slides={slides} client:load />}
</section>

<style>
  @keyframes fade-in-down {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fade-in-up {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-down {
    animation: fade-in-down 0.8s ease-out forwards;
  }

  .animate-fade-in-up {
    animation: fade-in-up 0.8s ease-out 0.2s forwards;
  }
</style>

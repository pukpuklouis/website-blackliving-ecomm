---
// Header component for Black Living website
export interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<header class={`bg-white shadow-sm ${className}`}>
  <div class="container mx-auto px-4">
    <nav class="flex items-center justify-between py-4">
      <div class="flex items-center space-x-8">
        <!-- Logo -->
        <a href="/" class="flex items-center space-x-2">
          <img src="/logo.svg" alt="Black Living 黑哥家居" class="h-8 w-auto" />
        </a>
        
        <!-- Main Navigation -->
        <ul class="hidden md:flex space-x-6">
          <li><a href="/about" class="text-gray-700 hover:text-black">關於黑哥</a></li>
          <li><a href="/simmons-black" class="text-gray-700 hover:text-black">席夢思黑標床墊</a></li>
          <li><a href="/accessories" class="text-gray-700 hover:text-black">精選周邊</a></li>
          <li><a href="/us-imports" class="text-gray-700 hover:text-black">美國品牌代購專區</a></li>
          <li><a href="/testimonials" class="text-gray-700 hover:text-black">顧客好評</a></li>
          <li><a href="/posts" class="text-gray-700 hover:text-black">好文分享</a></li>
          <li><a href="/appointment" class="text-gray-700 hover:text-black">預約試躺</a></li>
        </ul>
      </div>
      
      <!-- User Actions -->
      <div class="flex items-center space-x-4">
        <a href="/cart" class="text-gray-700 hover:text-black">購物車</a>
        <a href="/account" class="text-gray-700 hover:text-black">會員中心</a>
      </div>
    </nav>
  </div>
</header>
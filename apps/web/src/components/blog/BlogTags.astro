---
export interface Props {
  tags: string[];
  layout?: 'sidebar' | 'inline';
  class?: string;
  locale?: string;
}

const { 
  tags, 
  layout = 'sidebar', 
  class: className = '', 
  locale = 'zh-TW' 
} = Astro.props;

// Internationalization for tag labels
const tagLabels = {
  'zh-TW': '標籤',
  'en': 'Tags'
};

const tagLabel = tagLabels[locale as keyof typeof tagLabels] || tagLabels['zh-TW'];
---

{tags && tags.length > 0 && (
  <div class={`blog-tags mb-6 ${layout === 'sidebar' ? 'bg-white rounded-lg md:rounded-lg rounded-none border border-gray-200 md:border border-x-0 p-4 md:bg-white bg-gray-50 md:mx-0 mx-4' : 'border-t border-gray-200 pt-6'} ${className}`}>
    <h3 class={`blog-tags__title ${layout === 'sidebar' ? 'text-base font-semibold text-gray-900 mb-3' : 'text-lg font-semibold text-gray-900 mb-3'}`}>
      {tagLabel}
    </h3>
    <div class='blog-tags__list flex flex-wrap gap-2'>
      {tags.map(tag => (
        <a
          href={`/blog/tag/${encodeURIComponent(tag)}`}
          class={`blog-tag inline-flex items-center rounded-full font-medium transition-colors no-underline ${layout === 'sidebar' ? 'px-2.5 py-1 text-xs bg-blue-50 text-blue-700 hover:bg-blue-100' : 'px-3 py-1.5 text-sm bg-gray-100 text-gray-700 hover:bg-gray-200'}`}
          title={`查看更多 "${tag}" 相關文章`}
        >
          #{tag}
        </a>
      ))}
    </div>
  </div>
)}


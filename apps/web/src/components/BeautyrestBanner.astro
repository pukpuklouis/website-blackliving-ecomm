---
import { Image } from 'astro:assets';

interface Props {
  imageSrc?: string;
  title?: string;
  logoSrc?: string;
}

const {
  imageSrc = '/images/about/beautyrest-black-banner.webp',
  title = '美國席夢思原廠下單',
  logoSrc = '/images/about/beautyrest-black-logo.webp',
} = Astro.props;
---

<div class='relative w-full overflow-hidden rounded-2xl shadow-2xl' style='aspect-ratio: 21/9;'>
  <!-- Background Image -->
  <div class='absolute inset-0'>
    <Image
      src={imageSrc}
      alt='Beautyrest BLACK Mattress'
      width={1920}
      height={820}
      class='w-full h-full object-cover'
      loading='lazy'
      format='webp'
    />
    <!-- Dark overlay for better text contrast -->
    <div class='absolute inset-0 bg-black/20'></div>
  </div>

  <!-- Content Overlay -->
  <div class='relative h-full flex flex-col items-center justify-center text-white z-10 px-4'>
    <!-- Title Text -->
    <h3 class='text-3xl md:text-5xl font-bold mb-6 text-shadow-lg drop-shadow-2xl'>
      {title}
    </h3>

    <!-- Beautyrest BLACK Logo -->
    <div class='bg-white/95 rounded-xl px-8 py-6 shadow-2xl'>
      <div class='text-center'>
        <div class='text-4xl md:text-6xl font-bold text-gray-900 mb-2'>Beautyrest</div>
        <div class='text-2xl md:text-4xl font-bold text-gray-800 tracking-widest'>BLACK</div>
        <div class='h-1 w-full bg-gradient-to-r from-transparent via-gray-900 to-transparent mt-2'>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .text-shadow-lg {
    text-shadow:
      0 2px 4px rgba(0, 0, 0, 0.3),
      0 4px 8px rgba(0, 0, 0, 0.2);
  }
</style>

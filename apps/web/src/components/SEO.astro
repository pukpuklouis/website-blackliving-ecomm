---
// Centralized SEO component for all Black Living pages
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  image?: string;
  type?: 'website' | 'article' | 'product';
  publishedTime?: string;
  modifiedTime?: string;
  schema?: object;
}

const {
  title = 'Black Living 黑哥家居',
  description,
  canonical,
  image = 'https://placehold.co/1200x630?text=og+image',
  type = 'website',
  publishedTime,
  modifiedTime,
  schema,
} = Astro.props;

const fullTitle = title.includes('Black Living') ? title : `${title} | Black Living 黑哥家居`;
const canonicalURL = canonical || Astro.url.href;
const imageURL = new URL(image, Astro.site).href;
---

<!-- Primary Meta Tags -->
<title>{fullTitle}</title>
<meta name='title' content={fullTitle} />
<meta name='description' content={description} />
<meta name='robots' content='index, follow' />
<link rel='canonical' href={canonicalURL} />

<!-- Open Graph / Facebook -->
<meta property='og:type' content={type} />
<meta property='og:url' content={canonicalURL} />
<meta property='og:title' content={fullTitle} />
<meta property='og:description' content={description} />
<meta property='og:image' content={imageURL} />
<meta property='og:site_name' content='Black Living 黑哥家居' />
<meta property='og:locale' content='zh_TW' />

{publishedTime && <meta property='article:published_time' content={publishedTime} />}
{modifiedTime && <meta property='article:modified_time' content={modifiedTime} />}

<!-- Twitter -->
<meta property='twitter:card' content='summary_large_image' />
<meta property='twitter:url' content={canonicalURL} />
<meta property='twitter:title' content={fullTitle} />
<meta property='twitter:description' content={description} />
<meta property='twitter:image' content={imageURL} />

<!-- LINE specific (same as Open Graph) -->
<meta property='line:card' content='summary_large_image' />

<!-- Structured Data -->
{schema && <script type='application/ld+json' set:html={JSON.stringify(schema)} />}

<!-- Default LocalBusiness Schema -->
<script type='application/ld+json'>
  {
    "@context": "https://schema.org",
    "@type": "LocalBusiness",
    "name": "Black Living 黑哥家居",
    "description": "專營席夢思黑標床墊，提供全台最低價與專業服務",
    "url": "https://blackliving.com.tw",
    "telephone": "+886-X-XXXX-XXXX",
    "address": [
      {
        "@type": "PostalAddress",
        "streetAddress": "中和展間地址",
        "addressLocality": "中和區",
        "addressRegion": "新北市",
        "addressCountry": "TW"
      },
      {
        "@type": "PostalAddress",
        "streetAddress": "中壢展間地址",
        "addressLocality": "中壢區",
        "addressRegion": "桃園市",
        "addressCountry": "TW"
      }
    ],
    "openingHours": "Mo-Su 09:00-21:00",
    "priceRange": "$$$$",
    "servesCuisine": [],
    "hasOfferCatalog": {
      "@type": "OfferCatalog",
      "name": "床墊產品目錄",
      "itemListElement": [
        {
          "@type": "Offer",
          "itemOffered": {
            "@type": "Product",
            "name": "席夢思黑標床墊"
          }
        }
      ]
    }
  }
</script>

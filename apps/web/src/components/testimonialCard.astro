---
import { Image } from "astro:assets";
import { Star } from "lucide-react";

type Props = {
  testimonial: {
    rating: number;
    source: string;
    text: string;
    image?: string;
  };
};

const { testimonial } = Astro.props;
---

<div
  class="group relative bg-white/80 backdrop-blur-sm p-2 rounded-2xl shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100 flex flex-col h-full"
>
  <!-- Decorative Quote Icon -->
  <div
    class="absolute top-6 right-6 text-gray-200 group-hover:text-amber-50 transition-colors duration-300 font-serif text-6xl leading-none select-none"
  >
    "
  </div>

  {testimonial.image && (
      <div class="mb-6 overflow-hidden rounded-xl bg-gray-50 aspect-video relative group-hover:shadow-md transition-shadow">
        <Image
          src={testimonial.image}
          alt={`${testimonial.source} testimonial`}
          width={600}
          height={400}
          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
      </div>
    )}

  <div class="flex-1 z-10">
    <div class="flex gap-1 mb-4 text-amber-400">
      {Array.from({ length: 5 }).map((_, i) => (
          <Star
            size={16}
            fill={i < testimonial.rating ? "currentColor" : "none"}
            className={i < testimonial.rating ? "text-amber-400" : "text-gray-200"}
          />
        ))}
    </div>

    <blockquote class="mb-6 flex-1">
      <p class="text-gray-700 leading-relaxed text-lg italic font-light">
        {testimonial.text}
      </p>
    </blockquote>
  </div>
</div>

---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import FooterLinkColumn from './FooterLinkColumn.astro';

const footerCollection = await getCollection('footer');
const footerData = footerCollection[0].data.sections;
---

<footer class="bg-primary/25 py-16">
  <div class="container mx-auto px-6">
    <div class="flex flex-col gap-12 md:grid md:grid-cols-5 md:gap-12">
      <div class="flex justify-center md:justify-start md:col-span-2">
        <Image
          src="/blackliving-logo-zh.svg"
          alt="BlackLiving Logo"
          width={100}
          height={100}
          class="h-24 w-auto"
          loading="eager"
          decoding="async"
        />
      </div>
      <div class="flex flex-col justify-center gap-6 md:col-span-3 md:grid md:grid-cols-3 md:gap-10">
        {footerData.map((column) => (
          <FooterLinkColumn title={column.title} links={column.links} />
        ))}
      </div>
    </div>
  </div>
</footer>

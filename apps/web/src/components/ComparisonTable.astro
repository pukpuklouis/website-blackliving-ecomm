---
import { Image } from "astro:assets";

interface ComparisonRow {
  category: string;
  blackLiving: string;
  traditional: string;
}

const comparisonData: ComparisonRow[] = [
  {
    category: "流程步驟",
    blackLiving: "黑哥直營進口\n(Black Living)",
    traditional: "一般代購模式",
  },
  {
    category: "下訂金額",
    blackLiving: "無中間商，\n也只需先付30%訂金",
    traditional: "非第一手貨源，\n5~8%代購費，需一次付清",
  },
  {
    category: "採購方式",
    blackLiving: "美國席夢思原廠下單",
    traditional: "美國零售網站購買",
  },
  {
    category: "倉儲費用",
    blackLiving: "自有倉庫，免倉儲費",
    traditional: "美國/台灣倉另收費",
  },
  {
    category: "出口方式",
    blackLiving: "整櫃出口，穩定快速",
    traditional: "散櫃合運，等待",
  },
  {
    category: "物流配送",
    blackLiving: "自有物流，免物流費",
    traditional: "第三方物流需付費",
  },
  {
    category: "價格透明度",
    blackLiving: "高，全流程直營",
    traditional: "低，多重加價成本",
  },
  {
    category: "配送時間",
    blackLiving: "現貨無需等",
    traditional: "需等三到四個月",
  },
  {
    category: "產品保固",
    blackLiving: "完整保固10年，\n產品有問題也能\n即時換新",
    traditional: "真正保固時間短，\n且後續只能折舊換新",
  },
];
---

<div class="max-w-3xl mx-auto">
  <div class="flex -gap-2">
    <!-- Left Column: Black Living (separate) -->
    <div
      class="flex flex-col -mt-4 md:-mt-8 bg-[#C69C6D] gap-0 rounded-xl border-4 border-white w-36 md:w-72 z-10 relative shadow-lg"
    >
      <!-- Award Badge - Top Right Corner -->
      <div
        class="absolute -top-8 -right-6 md:-right-12 z-20 w-12 h-auto md:w-24"
      >
        <Image
          src="/images/about/blackliving-winning-badge.webp"
          alt="勝利徽章"
          width={128}
          height={160}
          class="w-full h-full object-contain drop-shadow-2xl"
          loading="eager"
        />
      </div>

      {
        comparisonData.map((row) => (
          <div class='flex items-center justify-center py-6 md:py-6 px-2 md:px-4 border-y-2 border-white'>
            <p class='text-xs md:text-xl font-bold text-center text-gray-50 leading-snug whitespace-pre-line'>
              {row.blackLiving}
            </p>
          </div>
        ))
      }
    </div>

    <!-- Right Side: Category + Traditional (together) -->
    <div
      class="flex flex-col -ml-4 h-fit flex-1 border-4 rounded-r-xl border-gray-700"
    >
      {
        comparisonData.map((row) => (
          <div class='flex gap-0'>
            <!-- Center: Category -->
            <div class='flex items-center justify-center bg-gray-400 px-4 py-2 md:py-6 border-y-2 border-gray-800 w-20 md:w-40'>
              <h4 class='text-xs md:text-xl font-bold text-gray-50 text-center whitespace-nowrap'>{row.category}</h4>
            </div>

            <!-- Right: Traditional -->
            <div class='flex-1 flex items-center justify-center bg-gray-100 px-2 py-6 md:py-6 border-y-2 border-gray-800'>
              <p class='text-xs md:text-xl font-bold text-center text-gray-800 leading-snug whitespace-pre-line'>
                {row.traditional}
              </p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>

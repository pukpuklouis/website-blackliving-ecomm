---
import { Image } from 'astro:assets';
interface Props {
  headline?: string;
  body?: string;
}

const {
  headline = '品牌介紹',
  body = '黑哥居家 Black Living｜Simmons Black Label 平行輸入首選\n黑哥居家是全台最大 Simmons 席夢思黑標床墊平行輸入商，擁有多年貿易經驗，商品100%美國製造、原廠直送，提供最齊全的款式與現貨庫存，長期服務設計師、建案與家具通路。',
} = Astro.props;
---

<section class='py-20 bg-white'>
  <div class='container mx-auto px-4'>
    <div class='max-w-4xl mx-auto text-center'>
      <!-- Black Living Logo-->
      <div class='w-full flex justify-center items-center mb-24'>
      <Image
        src='/blackliving-logo-zh.svg'
        alt='Black Living Logo'
        width={100}
        height={100}
        class='mb-4 w-auto h-20 md:h-32'
      />
      </div>
      <!-- Headline -->
      <h2 class='text-3xl md:text-4xl font-bold text-gray-800 mb-4'>
        {headline}
      </h2>
      <!-- Body text -->
      <div class='prose prose-lg md:prose-xl mx-auto'>
        <p class='text-gray-700 leading-relaxed text-lg md:text-xl'>
          {body}
        </p>
      </div>
    </div>
  </div>
</section>

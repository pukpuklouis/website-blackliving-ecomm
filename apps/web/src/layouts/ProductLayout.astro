---
import BaseLayout from './BaseLayout.astro';
import SEO from '../components/SEO.astro';
import '../styles/global.css';

export interface Props {
  title: string;
  description: string;
  image?: string;
  publishedTime?: string;
  modifiedTime?: string;
}

const { title, description, image, publishedTime, modifiedTime } = Astro.props;
---

<BaseLayout {title} {description} {image} {publishedTime} {modifiedTime}>
  <main class='container mx-auto px-4 py-8'>
    <!-- Two-column product layout -->
    <div class='grid grid-cols-1 lg:grid-cols-12 gap-8'>
      <!-- Left Column - Product Images (60% width on desktop) -->
      <div class='lg:col-span-7'>
        <slot name="product-images" />
      </div>
      
      <!-- Right Column - Product Details & Actions (40% width on desktop) -->
      <div class='lg:col-span-5'>
        <slot name="product-details" />
      </div>
    </div>
    
    <!-- Full-width content below the main grid (tabs, additional info) -->
    <div class='mt-12'>
      <slot name="product-tabs" />
    </div>
    
    <!-- Fallback slot for backwards compatibility -->
    <slot />
  </main>
</BaseLayout>
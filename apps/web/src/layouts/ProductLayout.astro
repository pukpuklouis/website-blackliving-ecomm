---
import BaseLayout from './BaseLayout.astro';
import { SEO } from '../components/SEO.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
  price?: string;
  category?: string;
}

const { title, description, image, price, category } = Astro.props;
---

<BaseLayout>
  <SEO 
    slot="head"
    title={title}
    description={description}
    image={image}
    type="product"
    price={price}
    category={category}
  />
  
  <main class="container mx-auto px-4 py-8">
    <slot />
  </main>
</BaseLayout>